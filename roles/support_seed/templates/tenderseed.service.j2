[Unit]
Description={{ network }} Tenderseed
After=network-online.target

[Service]
User={{ ansible_user }}
ExecStart={{ user_dir }}/go/bin/tenderseed  -home {{ user_dir }}/{{ folder }} -seeds {{ seeds if seeds else default_seeds  }} -chain-id {{ chain_id }} start
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
