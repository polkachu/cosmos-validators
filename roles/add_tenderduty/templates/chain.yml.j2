chain_id: '{{ chain-id }}'
valoper_address: '{{ valoper }}'
public_fallback: '{{ yes if type == 'main' else no }}'

alerts:
  stalled_enabled: yes
  stalled_minutes: 15

  consecutive_enabled: yes
  consecutive_missed: '{{ 15 if type == 'main' else 25 }}'
  consecutive_priority: critical

  percentage_enabled: yes
  percentage_missed: '{{ 10 if type == 'main' else 25 }}'
  percentage_priority: warning

  alert_if_inactive: yes
  alert_if_no_servers: yes

  pagerduty:
    enabled: yes
    api_key: '{{ pagerduty_key }}' # uses default if blank

  discord:
    enabled: yes
    webhook: "" # uses default if blank

  # Telegram settings
  telegram:
    enabled: no
    api_key: "" # uses default if blank
    channel: "" # uses default if blank

nodes:
{% if type == 'main' %}
  - url: https://{{ endpoint_prefix }}-rpc.lavenderfive.com:443
    alert_if_down: yes
{% endif %}
  - url: http://{{ host_ip }}:{{ custom_port_prefix }}57
    alert_if_down: yes
